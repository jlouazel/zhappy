#include	"world.h"
#include	"player.h"
#include	"ressources.h"
#include	"lib_strings.h"
#include	"str_ressources.h"

static
const char	*pose(t_player *player, t_world *world, void *arg)
{
  t_square	*sq;
  e_ressource	type;

  type = 0;
  sq = world->map->at(world->map,
		      POS_LIST(player->x, player->y, world->width));
  while (type != EMPTY)
    {
      if (my_strcmp((char *)arg, string_ressources[type]) == 0)
	{
	  if (player->inventory_tab[type] == 0)
	    return ("KO\n");
	  else
	    {
	      player->inventory_tab[type]--;
	      sq->content[type]++;
	      return ("OK\n");
	    }
	}
      type++;
    }
  return ("KO\n");
}

void		_pose(t_player *player)
{
  if (player)
    {
      player->pose = &pose;
    }
}
